{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": false,
    "noImplicitAny": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "outDir": "./build",
    "declaration": false,
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "exclude": [
    "./build",
    "./node_modules"
  ]
}